<% unless @plugin.nil? %>

<div class="row-fluid">
    <table>
      <tr>
        <th style="width:200px;">Name</th>
        <th>Version</th>
        <th style="width:260px;">Copyright</th>
        <th>File</th>
      </tr>
      <% @plugin.each_with_index do |plugin, ix|%>
        <tr class="plugin-row" data-pos="<%= ix %>">
          <td><%= plugin["plugin"]["info"]["name"] %></td>
          <td><%= plugin["plugin"]["info"]["version"]/100.0 %></td>
          <td><%= plugin["plugin"]["info"]["copyright"] %></td>
          <td><%= plugin["plugin"]["file"] %></td>
        </tr>
      <% end %>
    </table>
  <div id="plugin-form" class="span6">
    <%= render "plugin/plugin_form" %>
  </div>
</div>


<% end %>


