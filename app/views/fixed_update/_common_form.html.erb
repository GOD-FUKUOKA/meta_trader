<% unless @common.nil? %>
  <div class="section section-common">
    <h2 class="blue normal"><i class="icon-cogs"></i> Common</h2>
    <%= form_tag common_submit_path, :method => "POST", :remote => true do %>
      <div class="box-content">

      <table class="table table-striped common-table">
        <tbody>
          <tr>
            <td>Server</td>
            <td>
              <%= @common["owner"] %></td>
          </tr>
          <tr>
            <td>Name</td>
            <td><%= text_field_tag "common_tab[name]", @common["name"], :class =>"single-line" %></td>
          </tr>
          <tr>
            <td>IP Address</td>
            <td>
              <div  class="input-xlarge">
              <%= select_tag "common_tab[address]", options_for_ip_address(@common["bind_adresses"],@common["address"]), :class =>"single-line chosen-select" %>
            </div></td>
          </tr>
          <tr>
            <td>Communication port</td>
            <td><%= text_field_tag "common_tab[port]", @common["port"], :class =>"single-line" %></td>
          </tr>
          <tr>
            <td>Demo accounts</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[typeofdemo]", options_for_demo_type(@common["typeofdemo"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>Time of demo</td>
            <td><%= text_field_tag "common_tab[timeofdemo]", @common["timeofdemo"], :class =>"spinner single-line" %> days</td>
          </tr>

          <tr>
            <td>Time zone</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[timezone]", options_for_timezone(@common["timezone"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>Daylight Saving Time correction</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[daylightcorrection]", options_for_yes_no(@common["daylightcorrection"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>End of day time</td>
            <td><%= text_field_tag "common_tab[endhour]", @common["endhour"], :class =>"spinner single-line" %> : <%= text_field_tag "common_tab[endminute]", @common["endminute"], :class =>"spinner single-line" %></td>
          </tr>
          <tr>
            <td>Rollover mode</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[rollovers_mode]", options_for_rollover(@common["rollovers_mode"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>Statements mode</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[statement_mode]", options_for_statements(@common["statement_mode"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>Monthly statements mode</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[monthly_state_mode]", options_for_monthly_statements(@common["monthly_state_mode"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>Generate statements at weekends</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[statement_weekend]", options_for_yes_no(@common["statement_weekend"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>Keep internal emails</td>
            <td><%= text_field_tag "common_tab[keepemails]", @common["keepemails"], :class =>"spinner single-line" %> days</td>
          </tr>
          <tr>
            <td>Keep ticks</td>
            <td><%= text_field_tag "common_tab[keepticks]", @common["keepticks"], :class =>"spinner single-line" %> days</td>
          </tr>
          <tr>
            <td>Optimization time</td>
            <td><%= text_field_tag "common_tab[optimization_t][optimization_time_h]", time_hours(@common["optimization_time"]), :class =>"spinner single-line" %> : 
              <%= text_field_tag "common_tab[optimization_t][optimization_time_m]", time_minutes(@common["optimization_time"]), :class =>"spinner single-line" %></td>
          </tr>
          <tr>
            <td>Antiflood controlls</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[antiflood]", options_for_yes_no(@common["antiflood"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>Antiflood max. connections</td>
            <td><%= text_field_tag "common_tab[floodcontrol]", @common["floodcontrol"], :class =>"spinner single-line" %></td>
          </tr>
          <tr>
            <td>Feeder switch timeout</td>
            <td><%= text_field_tag "common_tab[feeder_timeout]", @common["feeder_timeout"], :class =>"spinner single-line" %> seconds</td>
          </tr>
          <tr>
            <td>Live update mode</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[liveupdate_mode]", options_for_live_update(@common["liveupdate_mode"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>Time synchronization with</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[timesync]", options_for_timesync(@common["timesync"]), :class =>"single-line chosen-select" %></div></td>
          </tr>
          <tr>
            <td>IP Access list of web services</td>
            <td>
              <% @common["web_adresses"].each_with_index do |wa, ix| %>
                <%= text_field_tag "common_tab[web_adresses][#{ix}]", ApiMethods.long2ip(wa), :style => "width: 120px;", :class =>"single-line" %>
                <% if ix==3 %><br/><% end %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>Path to accounts/orders bases</td>
            <td><%= text_field_tag "common_tab[path_database]", @common["path_database"], :style => "width: 300px;", :class =>"single-line" %></td>
          </tr>
          <tr>
            <td>Path to history bases</td>
            <td><%= text_field_tag "common_tab[path_history]", @common["path_history"], :style => "width: 300px;", :class =>"single-line" %></td>
          </tr>
          <tr>
            <td>Path to log files</td>
            <td><%= text_field_tag "common_tab[path_log]", @common["path_log"], :style => "width: 300px;", :class =>"single-line" %></td>
          </tr>
          <tr>
            <td>Adapters</td>
            <td>
              <div  class="input-xlarge">
                <%= select_tag "common_tab[adapter][selected_adapter]", options_for_adapters(@common["adapters"].split('|')), :class =>"single-line chosen-select" %>
              <%= hidden_field_tag "common_tab[adapter][full_adapter_list]", @common["adapters"], :class =>"" %>
            </div></td>
          </tr>
          <tr>
            <td></td>
            <td> <%= submit_tag "Submit", :class => "btn btn-primary" %> </td>
          </tr>
        </tbody>
      </table>
      </div><!--/box-content-->
     
    <% end %>
  </div>
<% end %>
