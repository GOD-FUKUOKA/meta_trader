<!-- Modal -->
<div id="modal-data-feeds" class="modal hide in modal-data-feeds modal-form tab-forms " tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel" class="normal"><i class="icon-globe"></i> Data Feeds</h3>
    </div>
    <div class="modal-body">


<%= form_tag feeder_submit_path, :method => "POST", :remote => true do %>
  <%= hidden_field_tag "new_feeder", @fdr.empty? %>
  <%= hidden_field_tag "feeder_key", @fdr["name"] %>
  <div class="row-fluid">
    <div class="padd-10">
       <%= hidden_field_tag "feeder[enable]", '0' %>
       <%= check_box_tag "feeder[enable]", '1', @fdr["enable"]==1, :class =>"icheck-me",  :data => { :skin => 'minimal', :color =>'blue'} %> Enable
    </div>
  </div>
  <div class="row-fluid">
  <div class="padd-10">
    <div class="span7">
      Name: <%= text_field_tag "feeder[name]", @fdr["name"], :class =>"single-line" %>
    </div>
    <div class="span5">
      <%= select_tag "feeder[mode]", options_for_feeder_mode(@fdr), :class =>"single-line chosen-select" %>
    </div>
  </div>
  </div>
  <div class="row-fluid">
    <div class="padd-10">
      File: <%= select_tag "feeder[file]", options_for_feeder_file(@fdr["file"]), :class =>"single-line chosen-select" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="padd-10">
      Server: <%= text_field_tag "feeder[server]", @fdr["server"], :class =>"single-line" %>
    </div>
  </div>
  <div class="row-fluid">
  <div class="padd-10">
    <div class="span6">
      Login: <%= text_field_tag "feeder[login]", @fdr["login"], :class =>"single-line input-small" %>
    </div>
    <div class="span6">
      Password: <%= password_field_tag "feeder[pass]", @fdr["pass"], :class =>"single-line input-small" %>
    </div>
  </div>
  </div>
  <div class="row-fluid">
  <div class="padd-10">
    <div class="span6">
      Keywords: <%= text_field_tag "feeder[keywords]", @fdr["keywords"], :class =>"single-line" %>
    </div>
    <div class="span6">
      Language: <%= select_tag "feeder[news_langid]", options_for_feeder_news_langid(@fdr["news_langid"]), :class =>"single-line chosen-select" %>
    </div>
  </div>
  </div>
  <div class="row-fluid">
  <div class="padd-10">
    <div class="span6 input-small">
      Idle timeout: <%= select_tag "feeder[timeout]", options_for_feeder_timeout(@fdr["timeout"]), :class =>"single-line chosen-select" %> seconds, reconnect after 
    </div>
    <div class="span6 input-small">
      <%= select_tag "feeder[timeout_reconnect]", options_for_feeder_timeout_reconnect(@fdr["timeout_reconnect"]), :class =>"single-line chosen-select" %> seconds
    </div>
  </div>
  </div>
  <div class="row-fluid">
  <div class="padd-10">
    <div class="span6">
      Sleep for: <%= text_field_tag "feeder[timeout_sleep]", @fdr["timeout_sleep"], :class =>"single-line input-small" %> seconds after
    </div>
    <div class="span6">
      <%= text_field_tag "feeder[attemps_sleep]", @fdr["attemps_sleep"], :class =>"single-line input-small" %> attempts
    </div>
  </div>
  </div>
       <div class="form-actions">
      <%= submit_tag"Submit", :class => "btn btn-primary" %>
    </div> 
<% end %>

</div>
</div>