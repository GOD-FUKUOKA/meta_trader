        <th>Source</th>
        <th>Server</th>
      </tr>
      <% @feeder.each_with_index do |feeder, ix|%>
        <tr class="feeder-row" data-pos="<%= ix %>">
          <td><%= feeder["name"] %></td>
          <td><%= ["Quotes", "News", "Quotes&News"][feeder["mode"]] %></td>
          <td><%= feeder["server"] %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div id="feeder-form" class="span7">
    <%= render "feeder/feeder_form" %>
  </div>
</div>

