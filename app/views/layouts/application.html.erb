<head>
  <meta charset="utf-8" />
  <title>MetaTrader</title>
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <meta content="" name="description" />
  <meta content="" name="author" />
  
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <!-- BEGIN GLOBAL MANDATORY STYLES -->
  <link href="assets/plugins/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
  <link href="assets/plugins/plugins/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css"/>
  <link href="assets/plugins/css/style-metro.css" rel="stylesheet" />
  <link href="assets/plugins/css/style.css" rel="stylesheet" type="text/css"/>
  <link href="assets/plugins/plugins/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css"/>
  <link href="assets/plugins/css/style-responsive.css" rel="stylesheet" type="text/css"/>
  <link href="assets/plugins/css/themes/default.css" rel="stylesheet" type="text/css" id="style_color"/>
  <link href="assets/plugins/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css"/>
  <link href="assets/plugins/css/jelena-style.css" rel="stylesheet" type="text/css"/>
  <!-- END GLOBAL MANDATORY STYLES -->

  <!-- BEGIN PAGE LEVEL STYLES -->  
  <!-- END PAGE LEVEL STYLES -->

  <link rel="shortcut icon" href="favicon.ico" />

</head>

<body class="fixed-top">

  <div class="header navbar navbar-inverse navbar-fixed-top">
    <!-- BEGIN TOP NAVIGATION BAR -->
    <div class="navbar-inner">
      <div class="container-fluid">
      
        <a class="brand" href="/">
          <img src="assets/plugins/img/logo.png" alt="logo">
        </a>

        <a href="javascript:;" class="btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
          <img src="assets/plugins/img/menu-toggler.png" alt="">
        </a>
        <ul class="nav pull-right">
          <!-- BEGIN USER LOGIN DROPDOWN -->
          <li class="dropdown user">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img alt="" src="assets/plugins/img/avatar1_small.jpg">
            <span class="username">Username</span>
            <i class="icon-angle-down"></i>
            </a>
            <ul class="dropdown-menu">
               <li><a href="#"><i class="icon-user"></i> Profile</a></li>
               <li class="divider"></li>
               <li><a href="#"><i class="icon-key"></i> Log Out</a></li>
            </ul>
            </li>
            <!-- END USER LOGIN DROPDOWN -->
          </ul>
      </div>
    </div>
    <!-- END TOP NAVIGATION BAR -->
  </div>

  <%= render 'shared/sidebar' %>

  <!-- BEGIN PAGE -->
  <div class="page-content" style="margin-top: 42px;"><!-- FIXME: quickhack inline styles! -->
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
      <!-- BEGIN PAGE HEADER-->
      <div class="row-fluid">
        <div class="span12">
          <%= flash[:error] %>

          <!-- BEGIN PAGE TITLE & BREADCRUMB-->   
          <h3 class="page-title">
            Meta<span class="red">Trader</span>
            <small>page description</small>
          </h3>

          <ul class="breadcrumb">
            <li>
              <i class="icon-home"></i>
              <a href="#">Home</a> 
              <span class="icon-angle-right"></span>
            </li>
            <li><a href="#">Dashboard</a></li>
          </ul>

          <%= yield %>
        </div>
      </div>
      <!-- END PAGE HEADER-->
      <!-- CONTENT BODY GOES HERE >>>> -->
    </div>   
    <!-- END PAGE CONTAINER-->
  </div>      
  <!-- END PAGE -->

<%= render 'shared/footer' %>

  <!-- BEGIN JAVASCRIPTS -->
  <!-- BEGIN CORE PLUGINS -->
  <script src="assets/plugins/plugins/jquery-1.8.3.min.js" type="text/javascript"></script> 
  <!-- IMPORTANT! Load jquery-ui-1.10.1.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->  
  <script src="assets/plugins/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>    
  <script src="assets/plugins/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
  <!--[if lt IE 9]>
  <script src="assets/plugins/excanvas.js"></script>
  <script src="assets/plugins/respond.js"></script> 
  <![endif]-->  
  <script src="assets/plugins/plugins/breakpoints/breakpoints.js" type="text/javascript"></script>  
  <!-- IMPORTANT! jquery.slimscroll.min.js depends on jquery-ui-1.10.1.custom.min.js -->  
  <script src="assets/plugins/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
  <script src="assets/plugins/plugins/jquery.blockui.js" type="text/javascript"></script> 
  <script src="assets/plugins/plugins/jquery.cookie.js" type="text/javascript"></script>
  <script src="assets/plugins/plugins/uniform/jquery.uniform.min.js" type="text/javascript" ></script>  
  <!-- END CORE PLUGINS -->

  <!-- BEGIN PAGE LEVEL PLUGINS -->
  <!-- END PAGE LEVEL PLUGINS -->

  <!-- BEGIN PAGE LEVEL SCRIPTS -->
  <script src="assets/plugins/scripts/app.js" type="text/javascript"></script>
  <script src="assets/plugins/scripts/index.js" type="text/javascript"></script>      
  <!-- END PAGE LEVEL SCRIPTS --> 
  <script>
    jQuery(document).ready(function() {   
      App.init(); // initlayout and core plugins
      Index.init();
    });
  </script>

</body>
</html>