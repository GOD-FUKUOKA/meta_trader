$("#holiday_new_record").val("true");
<% if @result[:success] %>
  $(".holiday_table .holiday_row[data-position='<%= @position%>']").first().remove();
  $(".holiday_table .holiday_row").each(function(ix,el){
    if( parseInt($(el).attr("data-position")) > <%= @position %> ){
      $(el).attr("data-position", parseInt($(el).attr("data-position")) - 1);
      $(el).find("td a").first().attr("href", "/tabs/holiday/"+$(el).attr("data-position").toString());
    }
  });
<% elsif !@result[:success] %>
  alert("<%= @result[:msg] %>");
<% end %>