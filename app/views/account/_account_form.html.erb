<%= form_tag account_submit_path, :method => "POST", :remote => true do  %>
  <%= hidden_field_tag "new_account", @act.empty? %>
  <%= hidden_field_tag "account_key", @act["login"] %>
  <%= tabbed_panel do |tp| %>
    <% tp.add_tab("Personal") do %>
      <%= render "account/personal_tab" %>
    <% end %>
    <% unless @act.empty? %>
      <% tp.add_tab("Trade") do %>
        <%= render "account/trades_tab" %>
      <% end %>
      <% tp.add_tab("Security") do %>
        <%= render "account/security_tab" %>
      <% end %>
    <% end %>
    <%= submit_tag %>
  <% end %>
<% end %>