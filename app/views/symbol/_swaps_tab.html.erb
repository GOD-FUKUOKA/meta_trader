<div class="padd-10">

<div class="row-fluid">
  <div class="span12">
     <%= hidden_field_tag "symbol[swap_enable]", '0' %>
     <%= check_box_tag "symbol[swap_enable]", '1', @sym["swap_enable"]==1, :class =>"icheck-me pull-left",  :data => { :skin => 'minimal', :color =>'blue'} %> Enable
  </div>
</div>
<div class="row-fluid">
  <div class="span12 input-block">
    Type: <%= select_tag "symbol[swap_type]", options_for_symbol_swap_type(@sym["swap_type"]), :class =>"chosen-select" %>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    Long positions: <%= text_field_tag "symbol[swap_long]", @sym["swap_long"], :class =>"single-line  input-small" %>
  </div>
  <div class="span6">
    Short positions: <%= text_field_tag "symbol[swap_short]", @sym["swap_short"], :class =>"single-line  input-small" %>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    3-day swaps: <%= select_tag "symbol[swap_rollover3days]", options_for_symbol_swap_rollover3days(@sym["swap_rollover3days"]), :class =>"chosen-select" %>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
     <%= hidden_field_tag "symbol[swap_openprice]", '0' %>
     <%= check_box_tag "symbol[swap_openprice]", '1', @sym["swap_openprice"]==1, :class =>"icheck-me pull-left",  :data => { :skin => 'minimal', :color =>'blue'} %> Use open price for position value calculation
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
     <%= hidden_field_tag "find_this", '0' %>
     <%= check_box_tag "find_this", '1', @sym["find_this"]==1, :class =>"icheck-me pull-left",  :data => { :skin => 'minimal', :color =>'blue'} %> Charge variation margin on rollover (FIND THIS)
  </div>
</div>

</div><!--/padd-10-->