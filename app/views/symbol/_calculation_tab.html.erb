<div class="padd-10">

<div class="row-fluid">
  <div class="span12">
    Contract size: <%= text_field_tag "symbol[contract_size]", @sym["contract_size"], :class =>"single-line  input-small" %>
  </div>
</div>
<div class="row-fluid">
  <div class="span4">
    Initial margin: <br>
    <%= text_field_tag "symbol[margin_initial]", @sym["margin_initial"], :class =>"single-line  input-small" %>
  </div>
  <div class="span4">
    Maintenance: <br>
    <%= text_field_tag "symbol[margin_maintenance]", @sym["margin_maintenance"], :class =>"single-line  input-small" %>
  </div>
  <div class="span4">
    Hedged: <br>
    <%= text_field_tag "symbol[margin_hedged]", @sym["margin_hedged"], :class =>"single-line  input-small" %>
  </div>
</div>
<div class="row-fluid">
  <div class="span4">
    Tick Size: <%= text_field_tag "symbol[tick_size]", @sym["tick_size"], :class =>"single-line  input-small" %>
  </div>
  <div class="span4">
    Tick price: <%= text_field_tag "symbol[tick_value]", @sym["tick_value"], :class =>"single-line  input-small" %></td>
  </div>
  <div class="span4">
    Percentage: <%= text_field_tag "symbol[margin_divider]",
    @sym["margin_divider"] ? number_with_precision((100/@sym["margin_divider"].to_f), :precision => 2) : "", :class =>"single-line  input-small" %></td>
  </div>
</div>
<div class="row-fluid">
  <div class="span12 input-block">
    Margin Calculation: <%= select_tag "symbol[margin_mode]", options_for_symbol_margin_mode(@sym["margin_mode"]), :class =>"chosen-select" %>
  </div>
</div>
<div class="row-fluid">
  <div class="span12 input-block">
    Profit Calculation: <%= select_tag "symbol[profit_mode]", options_for_symbol_profit_mode(@sym["profit_mode"]), :class =>"chosen-select" %>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
     <%= hidden_field_tag "symbol[margin_hedged_strong]", '0' %>
     <%= check_box_tag "symbol[margin_hedged_strong]", '1', @sym["margin_hedged_strong"]==1, :class =>"icheck-me pull-left",  :data => { :skin => 'minimal', :color =>'blue'} %> Strong hedged margin mode
  </div>
</div>

</div><!--/padd-10-->